<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourtInformationActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/orange_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Court Information"
        android:padding="10dp"
        android:textSize="40dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/basketball_court"
        android:layout_marginTop="20dp"
        android:id="@+id/info_court_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_court_name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_court_description"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textColor="@color/gray"
        android:textStyle="italic"
        android:textAllCaps="true"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/three_buttons"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/court_is_full"
            android:background="@drawable/red_button"
            android:text="full"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/court_is_searching_for_players"
            android:background="@drawable/blue_button"
            android:text="more players"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="9dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/court_is_empty"
            android:background="@drawable/green_button"
            android:text="empty"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/back_to_map_button"
        android:text="back to the map"
        android:textSize="30dp"/>
</LinearLayout>